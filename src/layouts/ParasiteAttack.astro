---
import Base from "@/layouts/Base.astro";
import "@/styles/parasite-attack.css";

import { Image } from "astro:assets";
import backgroundImage from "@/images/games/parasite-attack-1984/1080x128_citybg.png";
import headerImage from "@/images/games/parasite-attack-1984/PA84_subscribe_header.png";

interface Props {
  title: string;
}

const { title = "DoubleWord Labs - Parasite Attack 1984" } = Astro.props;
const description =
  "Defend your city from grotesque parasites in Parasite Attack 1984! A chilled, strategic defense game with retro 2D pixel graphics, keyboard-controlled artillery, and endless waves of unique enemies. How long can you last?";
---

<Base
  title={title}
  description={description}
  bodyClass="flex min-h-full flex-col text-white bg-black"
>
  <slot name="head">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.conditional.violet.min.css"
    />
  </slot>

  <header
    id="header"
    class="min-w-full bg-auto lg:bg-contain bg-center bg-no-repeat"
    style={`background-image: url(${backgroundImage.src});`}
  >
    <Image src={headerImage} alt="Parasite Attack 1984" class="mx-auto" />
  </header>
  <slot />
</Base>
