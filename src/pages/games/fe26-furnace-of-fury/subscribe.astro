---
import { Image } from "astro:assets";
import Layout from "@/layouts/FurnaceOfFury.astro";

import felixGif from "@/images/games/fe26-furnace-of-fury/Fe-26_Felix_waving.gif";
---

<Layout title="Subscribe - Furnace of Fury - DoubleWord Labs">
  <main
    class="mt-8 mx-auto px-8 py-4 w-full sm:w-[95%] md:w-[75%] lg:w-[50%] rounded bg-black"
  >
    <h1 class="uppercase text-center">
      Curious about Felix and his adventures?
    </h1>

    <section class="flex flex-col items-center md:flex-row gap-2 my-4">
      <Image
        src={felixGif}
        alt="Felix"
        width="256"
        height="180"
        class="object-cover h-[180px]"
      />
      <div class="flex flex-col justify-center text-center md:text-left">
        <p>Subscribe to get game and development insights.</p>
        <strong>+ Special Benefits and Exclusive Content</strong>
      </div>
    </section>

    <section>
      <form
        method="post"
        action="https://listmonk.doublewordlabs.com/subscription/form"
        class="listmonk-form"
      >
        <div class="pico">
          <input type="hidden" name="nonce" />

          <input type="email" name="email" required placeholder="E-mail" />
          <input type="text" name="name" placeholder="Name (optional)" />
          <input
            id="c5f42"
            type="hidden"
            name="l"
            value="c5f42d9a-3c18-4fe3-811a-5501e732edd2"
          />

          <p>
            <input
              id="13897"
              type="checkbox"
              name="l"
              checked
              value="13897d36-3394-47b0-8bfe-c583bf4e1f23"
            />
            <label for="13897"
              >Also subscribe to the DoubleWord Labs Newsletter</label
            >
          </p>
          <input
            type="submit"
            value="Subscribe"
            class="w-full cursor-pointer uppercase font-extrabold !bg-[#ffff00] hover:!bg-[#ffee00]"
          />
        </div>
      </form>
    </section>
  </main>
</Layout>
